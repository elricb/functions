{
  "name": "@elricb/functions",
  "version": "1.0.0",
  "description": "Reusable low level functions",
  "license": "MIT",
  "author": "elricb (https://github.com/elricb)",
  "homepage": "https://github.com/elricb/functions#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elricb/functions.git"
  },
  "bugs": {
    "url": "https://github.com/elricb/functions/issues"
  },
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "src/typescript.d.ts",
  "type": "commonjs",
  "exports": {
    "./*": {
      "require": "./lib/cjs/*.js",
      "import": "./lib/esm/*.js"
    }
  },
  "scripts": {
    "test": "jest",
    "lint": "xo",
    "docs": "npx typedoc --entryPointStrategy expand --out ./docs ./src",
    "build-cjs": "./node_modules/typescript/bin/tsc --project ./tsconfig-cjs.json --outDir ./lib/cjs --importHelpers",
    "build-esm": "./node_modules/typescript/bin/tsc --project ./tsconfig-esm.json --outDir ./lib/esm --importHelpers",
    "build": "rm -rf ./lib && npm run build-esm && npm run build-cjs",
    "release": "npm run lint && npm test && npm run docs && npm run build"
  },
  "engines": {
    "node": ">=15.0.0"
  },
  "devDependencies": {
    "@elricb/prettier-config": "^0.0.1",
    "@elricb/xo-config": "^0.1.6",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.7",
    "typedoc": "^0.23.15",
    "typescript": "^5.0.2",
    "xo": "^0.53.1"
  }
}
