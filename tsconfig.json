{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",
    "target": "es2021",
    "lib": ["es2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.js"],
  "exclude": ["**/*.spec.ts"]
}
